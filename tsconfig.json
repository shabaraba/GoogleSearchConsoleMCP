{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@modelcontextprotocol/sdk": ["node_modules/@modelcontextprotocol/sdk"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}